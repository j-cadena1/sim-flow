  "repository": {
    "type": "git",
    "url": "https://github.com/j-cadena1/sim-rq.git"
  },
  "bugs": {
    "url": "https://github.com/j-cadena1/sim-rq/issues"
  },
  "homepage": "https://github.com/j-cadena1/sim-rq#readme",
  "keywords": [
    "simulation",
    "request-management",
    "workflow",
    "docker",
    "typescript",
    "react",
    "postgresql"
  ],
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "echo '⚠️  Use \"make dev\" instead for Docker-first development' && vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "docker:dev": "docker compose -f docker-compose.dev.yaml up -d",
    "docker:prod": "docker compose up -d",
    "docker:down": "docker compose down && docker compose -f docker-compose.dev.yaml down"
  },
  "dependencies": {
    "@azure/msal-node": "^3.8.3",
