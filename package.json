    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/ui": "^4.0.15",
    "happy-dom": "^20.0.11",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^4.0.15"
  }
}
